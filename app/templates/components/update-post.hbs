{{#if updatePostForm}}
<h1>Update Post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="writer">Writer</label>
        {{input value=writer id="writer"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating out of Five stars</label>
        {{input value=rating id="rating" type="number"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
